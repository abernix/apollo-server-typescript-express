{
  "name": "apollo-server-typescript-express",
  "version": "0.1.0",
  "private": true,
  "description": "Apollo Server TypeScript",
  "author": "Jesse Rosenberger",
  "license": "MIT",
  "scripts": {
    "start": "npm run build; npm run watch",
    "build": "npm run build-ts",
    "serve": "npx node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build; npm run watch-debug",
    "serve-debug": "nodemon --inspect ./dist/server.js -w ../../packages/\\*/\\*\\*/ --ignore 'src/' -w .",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@apollo/gateway": "2.8.5",
    "apollo-server-express": "3.13.0",
    "express": "4.21.0",
    "graphql": "16.9.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "latest",
    "@types/node": "16.18.111",
    "concurrently": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  }
}
